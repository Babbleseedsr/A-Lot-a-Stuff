<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<hr>

  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <div>
    <% @categories.each do |category| %>
      <div>
        <p><%= category.title %></p>
        <p><%= category.description %></p>
        <p><%= link_to 'Show', category %></p>
        <p><%= link_to 'Edit', edit_category_path(category) %></p>
        <p><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure about this?' } %></p>
      </div>
    <% end %>
  </div>

<br>

<hr>

<%= link_to 'Create New Category', new_category_path %>
